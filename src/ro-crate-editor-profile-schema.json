{
    "title": "Validate Profile",
    "description": "Validates RO-Crate Editor profiles",
    "type": "object",
    "properties": {
        "metadata": {
            "description": "Profile Metadata",
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "description": { "type": "string" },
                "version": { "type": "number" }
            },
            "required": ["name", "description", "version"],
            "additionalProperties": true
        },
        "context": {
            "anyOf": [{ "type": "array" }, { "type": "string" }, { "type": "object" }]
        },
        "inputGroups": {
            "description": "Definitons for the top-level groups of inputs (properties)",
            "type": "array",
            "items": {
                "type": "object"
            }
        },
        "resolve": {
            "description": "Configuration to resolve property associations",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "types": { "type": "array" },
                    "properties": { "type": "array" }
                }
            }
        },
        "classes": {
            "description": "Class definitions",
            "type": "object",
            "patternProperties": {
                "^[A-Z,a-z]*": {
                    "type": "object",
                    "properties": {
                        "id": { "type": "string",  "pattern": "^(https?|http?)://" },
                        "hasSubclass": { "type": "array", "items": { "type": "string" } },
                        "subClassOf": { "type": "array", "items": { "type": "string" } },
                        "inputs": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "id": { "type": "string",  "pattern": "^(https?|http?)://" },
                                    "name": { "type": "string" },
                                    "label": { "type": "string" },
                                    "multiple": { "type": "boolean" },
                                    "required": { "type": "boolean" },
                                    "hide": { "type": "boolean" },
                                    "readonly": { "type": "boolean" },
                                    "group": { "type": "string" },
                                    "type": {
                                        "anyOf": [
                                            { "type": "array", "items": { "type": "string" } },
                                            {
                                                "type": "string",
                                                "enum": ["Select", "MultiSelect", "Value"]
                                            }
                                        ]
                                    }
                                },
                                "required": ["id", "name", "help"],
                                "additionalProperties": true
                            }
                        }
                    },
                    "required": ["inputs"],
                    "additionalProperties": false
                }
            }
        },
        "lookup": {
            "description": "Lookup definitions",
            "type": "object",
            "patternProperties": {
                "^[A-Z,a-z]*": {
                    "type": "object",
                    "properties": {
                        "fields": { "type": "array" },
                        "module": { "type": "string"},
                        "datapacks": { "type": "array", "items": { "type": "string" } }
                    },
                    
                    "additionalProperties": false
                }
            }
        }
    },
    "required": ["metadata", "classes"],
    "additionalProperties": true
}